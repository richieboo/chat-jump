{
  "manifest_version": 3,
  "name": "SMS Contact Filter",
  "version": "1.0.0",
  "description": "Quickly filter the SMS chats/contacts pane in your web SMS app so you can find a contact fast.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://messages.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "SMS Contact Filter"
  },
  "web_accessible_resources": [
    {
      "resources": ["info.html"],
      "matches": ["https://messages.google.com/*"]
    }
  ]
}
